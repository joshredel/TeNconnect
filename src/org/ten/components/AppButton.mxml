<?xml version="1.0" encoding="utf-8"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx" 
		  width="655" height="150" gap="40" verticalAlign="top"> <!-- width was 100% -->
	
	<fx:Script>
		<![CDATA[
			
			[Bindable]
			/**
			 * The name of the application.
			 */
			public var appName:String;
			
			[Bindable]
			/**
			 * The description of the application.
			 */
			public var appDescription:String;
		]]>
	</fx:Script>
	
	<s:Rect width="150" height="150">
		<s:fill>
			<s:SolidColor color="0x1FB4EC" />
		</s:fill>
	</s:Rect>
	
	<s:VGroup width="100%">
		<s:Label text="{appName}" fontSize="40" />
		
		<s:Label text="{appDescription}" fontSize="30" fontFamily="segoeLight" width="100%" />
	</s:VGroup>
</s:HGroup>
